{% extends 'base.html.twig' %}

{% block title %}Hall of Fame{% endblock %}

{% block body %}
    <!-- Hall -->
    <section class="hall_section_intro">
            <h1 class="hall_title"><i class="fa fa-star" aria-hidden="true"></i> NOS HEROS <i class="fa fa-star" aria-hidden="true"></i></h1>
    </section>

    <section class="hall_section" id="hall">
        <div class="hall_container container">
            <div class="hall_row row">
            <!-- Hall member -->
            {% for member in members %}
                {% if member.poster is not empty %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="hall_image image-flip" ontouchstart="this.classList.toggle('hover');">
                        <div class="hall_mainflip">
                            <div class="hall_frontside">
                                <div class="hall_card card">
                                    <div class="card-body text-center">
                                        <p><img class="hall_img_card img-fluid" src="{{ asset ('/images/' ~ member.poster.slug) }}" alt="card image"></p>
                                        <h4 class="hall_card_name card-title">{{member.firstname}} {{ member.lastname}}</h4>
                                        <a href="#" class="hall_btn btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="hall_backside">
                                <div class="hall_card card">
                                    <div class="hall_card_body card-body text-center mt-4">
                                        <h4 class="hall_card_name card-title">{{member.firstname}} {{ member.lastname}}</h4>
                                        <p class="hall_card_title card-text">
                                            {{member.firstname}} {{ member.lastname}} â€” {{ member.description }}
                                        </p>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <a class="hall_social social-icon text-xs-center" target="_blank" href="#">
                                                    <i class="fa fa-facebook"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a class="hall_social social-icon text-xs-center" target="_blank" href="#">
                                                    <i class="fa fa-twitter"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a class="hall_social social-icon text-xs-center" target="_blank" href="#">
                                                    <i class="fa fa-skype"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a class="hall_social social-icon text-xs-center" target="_blank" href="#">
                                                    <i class="fa fa-google"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
            </div>
        </div>
    </section>
    <!--Hall-->
{% endblock %}
